-- 테이블 생성(DDL)
CREATE TABLE TBL_MEMBER(
   MEMBER_ID NUMBER,
   MEMBER_NAME VARCHAR2(100),
   MEMBER_AGE NUMBER(3)
);

SELECT * FROM TBL_MEMBER;

-- 데이터 추가
INSERT INTO TBL_MEMBER
VALUES(1, '김영선', 20);

INSERT INTO TBL_MEMBER
VALUES(2, '신짱구', 5);

INSERT INTO TBL_MEMBER
VALUES(3, '신짱아', 2);

INSERT INTO TBL_MEMBER(MEMBER_ID, MEMBER_NAME)
VALUES(4, '유리');

INSERT INTO TBL_MEMBER(MEMBER_AGE)
VALUES(5);

UPDATE TBL_MEMBER
SET MEMBER_AGE = 5;

SELECT * FROM TBL_MEMBER;

UPDATE TBL_MEMBER
SET  MEMBER_AGE = 20
WHERE MEMBER_NAME = '김영선';

UPDATE TBL_MEMBER
SET MEMBER_AGE = 2
WHERE MEMBER_ID = 3;

DELETE FROM TBL_MEMBER
WHERE MEMBER_AGE = 5;

DELETE FROM TBL_MEMBER;


CREATE TABLE TBL_STUDENT(
	STUDENT_NUMBER NUMBER,
	STUDENT_NAME VARCHAR2(1000),
	STUDENT_MATH NUMBER,
	STUDENT_ENG NUMBER,
	STUDENT_KOR NUMBER,
	STUDENT_GRADE VARCHAR2(100)
);

INSERT INTO TBL_STUDENT(STUDENT_NUMBER , STUDENT_NAME, STUDENT_MATH, STUDENT_ENG)
--VALUES (1, '김철수', 90, 90, 90);
--VALUES (2, '이유리', 89, 91, 77);
--VALUES (3, '김웅이', 48, 100, 100);
--VALUES (4, '홍길동', 70, 25, 55);
--VALUES (5, '신짱구', 50, 10);

SELECT * FROM TBL_STUDENT;


SELECT STUDENT_NAME 이름, (STUDENT_MATH + STUDENT_ENG + STUDENT_KOR)/3 
FROM TBL_STUDENT;

SELECT * FROM TBL_STUDENT;

--NVL(컬럼명, 기본값) : 해당컬럼의 값이 NULL이면 지정한 값으로 출력
SELECT STUDENT_NAME 이름, NVL(STUDENT_KOR, 0) 국어점수_기본값 
FROM TBL_STUDENT;















